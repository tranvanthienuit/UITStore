<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#efefef"
             Title="Profile"
             x:Class="UITStore.UserPage.EditProfile">
    <ContentPage.Content>
        <StackLayout>
            <Frame Margin="10,0,10,40" CornerRadius="30" BorderColor="CornflowerBlue">
                <StackLayout>
                    <Entry Text="{Binding username}" Placeholder="{Binding username}" FontSize="15" />
                    <Entry Text="{Binding password}" Placeholder="{Binding password}" FontSize="15" />
                    <Entry Text="{Binding fullname}" Placeholder="{Binding fullname}" FontSize="15" />
                    <Entry Text="{Binding telephone}" Placeholder="{Binding telephone}" FontSize="15" />
                    <Entry Text="{Binding address}" Placeholder="{Binding address}" FontSize="15" />
                    <Button Text="Update" Clicked="updateProfile" Margin="50,10,50,0" FontSize="18"
                            FontAttributes="Bold"
                            BackgroundColor="CornflowerBlue" TextColor="White" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>