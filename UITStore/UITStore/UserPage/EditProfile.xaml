<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UITStore.UserPage.EditProfile">
    <ContentPage.Content>
        <StackLayout>
            <Frame Margin="10,0,10,40" CornerRadius="30" BorderColor="CornflowerBlue">
                <StackLayout>
                    <Entry x:Name="username" Placeholder="{Binding username}" FontSize="15" />
                    <Entry x:Name="password" Placeholder="{Binding password}" FontSize="15" />
                    <Entry x:Name="fullname" Placeholder="{Binding fullname}" FontSize="15" />
                    <Entry x:Name="telephone" Placeholder="{Binding telephone}" FontSize="15" />
                    <Entry x:Name="address" Placeholder="{Binding address}" FontSize="15" />
                    <Button Text="Update" Clicked="Update" Margin="50,10,50,0" FontSize="18"
                            FontAttributes="Bold"
                            BackgroundColor="CornflowerBlue" TextColor="White" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>